<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/sus"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/color"
    android:padding="16dp">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_weight="0">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/purr_bark_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="PURR  BARK"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Success Icon -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="210dp"
        android:layout_height="218dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:contentDescription="Success Icon"
        android:src="@drawable/payment" />

    <!-- Success Message -->

    <!-- Home Button -->

    <TextView
        android:id="@+id/congrats_message"
        android:layout_width="268dp"
        android:layout_height="128dp"
        android:layout_below="@id/success_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="47dp"
        android:text="Congratulations!!!"
        android:textColor="#2C2C54"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/payment_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/congrats_message"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="83dp"
        android:text="Your Payment is Successful"
        android:textColor="#4A4A4A"
        android:textSize="18sp" />

    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="home"
        android:backgroundTint="@color/orange"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="600dp" />


    </RelativeLayout>

