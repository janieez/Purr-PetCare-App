<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/morr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Category Icons Section -->

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/purr_bark_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="PURR  BARK"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Product Image"
                android:scaleType="fitCenter"
                android:src="@drawable/blackhawk" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Type:  Wet Food"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flavour:  Chicken Feast"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount: 1/4 cup (approximately 60 grams)"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:text="Notes: This high-protein, grain-free wet food helps with hydration and is typically well liked by cats. Serve at room temperature."
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Example: Fancy Feast Classic PatÃ©"
                android:textSize="25dp" />

            <Button
                android:id="@+id/homeee"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_below="@id/product_price"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/orange"
                android:text="Home"
                android:textColor="#000000" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
